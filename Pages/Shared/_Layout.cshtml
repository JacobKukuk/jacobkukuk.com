        .fade-in-delay-7 { animation-delay: 1.4s; }
        .fade-in-delay-8 { animation-delay: 1.6s; }
        
        /* Glass morphism effect */
        .glass {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
        
        /* Dark glass effect */
